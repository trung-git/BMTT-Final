<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Note</title>
    <link
      rel="shortcut icon"
      type="png"
      href="simplenote/simplenote/assets/image/logo.png"
    />
    <link
      rel="stylesheet"
      href="simplenote/simplenote/assets/themify-icons/themify-icons.css"
    />
    <link rel="stylesheet" href="simplenote/simplenote/assets/css/login.css" />
  </head>
  <body>
    <div id="main">
      <div id="logo">
        <img src="simplenote/simplenote/assets/image/logo.png" alt="" />
      </div>
      <h2 id="title">Đăng nhập</h2>
      <input
        class="login"
        id="login-username"
        type="text"
        placeholder="Tên đăng nhập"
      />
      <input
        class="login"
        id="login-password"
        type="password"
        placeholder="Mật khẩu"
      />
      <button class="login-btn" id="login-btn">Đăng nhập</button>
      <!-- <div class="remember-wrapper">
            <input checked="checked" name="remember" id="check" type="checkbox" value="1">
            <label class="remember" for="remember">Ghi nhớ thông tin đăng nhập</label>
        </div> -->
      <span class="or-line"></span>
      <p id="or-text">Hoặc đăng nhập bằng</p>
      <button class="login-btn" id="login-btn-google">
        Đăng nhập bằng Google <i class="ti-google"></i>
      </button>
      <!-- <button class="login-btn" id="login-btn-facebook">Đăng nhập bằng Facebook <i class="ti-facebook"></i></button> -->
    </div>
  </body>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script type="module" src="js/index.js"></script>
</html>
